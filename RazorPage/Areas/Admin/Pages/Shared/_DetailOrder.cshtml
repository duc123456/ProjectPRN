
@model List<OrderDetail>
@{
}
<div class="card-body">

    <table id="bootstrap-data-table" class="table table-striped table-bordered">

        <thead>
            <tr>
                <th>STT</th>
                <th>Ảnh</th>
                <th>Tên</th>
                <th>Số lượng</th>
                <th>Giá</th>
                <th>Tổng tiền</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
            }
            @foreach (var oddt in Model)
            {
                i++;
                var total = oddt.Price * oddt.Quantity;
                <tr>
                    <td>@i</td>
                    <td>@oddt.Product.ImageDefault</td>
                    <td>@oddt.Product.ProductName</td>
                    <td>@oddt.Quantity</td>
                    <td>@oddt.Price</td>
                    <td>@total</td>
                </tr>
            }

        </tbody>
    </table>
</div>
