@page "/Admin/Product/add"
@model RazorPage.Areas.Admin.Pages.Product.CreateModel
@{
}
<div class="animated fadeIn">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <a asp-area="Admin" asp-page="./Index" class="btn-success"><i class="fa fa-angle-left"></i>  Trở lại danh mục</a>
                </div>
                <div class="card-body">
                    <!-- Credit Card -->
                    <div class="row">
                        <div class="card">
                            <div class="card-header">
                                <h4>Sản phẩm</h4>
                            </div>
                            <div class="card-body">
                                <div class="default-tab">
                                    <nav>
                                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                            <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Thông tin</a>
                                            <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Ảnh</a>
                                        </div>
                                    </nav>
                                    <form method="post" asp-page="Product/Create" asp-area="Admin" novalidate="novalidate" enctype="multipart/form-data">
                                    <div class="tab-content pl-3 pt-2" id="nav-tabContent">
                                        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                                            <div id="pay-invoice">
                                                <div class="card-body">
                                                    <div class="card-title">
                                                        <h3 class="text-center">Thêm danh sản phẩm</h3>
                                                    </div>
                                                    <hr>
                                                        <div class="tab-content" id="myTabContent">
                                                            <div class="form-group">
                                                                <label asp-for="product.ProductName" class="control-label mb-1"></label>
                                                                <input id="cc-payment" asp-for="product.ProductName" type="text" class="form-control" aria-required="true" aria-invalid="false" value="">
                                                                <span asp-validation-for="product.ProductName"></span>
                                                            </div>
                                                            <div class="row">
                                                                <div class="form-group col-md-6">
                                                                    <label asp-for="product.PriceIn" class="control-label mb-1"></label>
                                                                    <input id="cc-payment" asp-for="product.PriceIn" type="text" class="form-control" aria-required="true" aria-invalid="false" value="">
                                                                    <span asp-validation-for="product.PriceIn"></span>
                                                                </div>
                                                                <div class="form-group col-md-6">
                                                                    <label asp-for="product.PriceOut" class="control-label mb-1"></label>
                                                                    <input id="cc-payment" asp-for="product.PriceOut" type="text" class="form-control" aria-required="true" aria-invalid="false" value="">
                                                                    <span asp-validation-for="product.PriceOut"></span>
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <label asp-for="product.CategoryId" class="control-label mb-1"></label>
                                                                <select id="categoryId" asp-items="Model.Categories" asp-for="product.CategoryId">
                                                                </select>
                                                                <span asp-validation-for="product.CategoryId"></span>
                                                            </div>
                                                            <div class="row">
                                                                <div class="form-group col-md-6">
                                                                    <label asp-for="product.Color" class="control-label mb-1"></label>
                                                                    <input id="cc-payment" asp-for="product.Color" type="text" class="form-control" aria-required="true" aria-invalid="false" value="">
                                                                    <span asp-validation-for="product.Color"></span>
                                                                </div>
                                                                <div class="form-group col-md-6">
                                                                    <label asp-for="product.Insurance" class="control-label mb-1"></label>
                                                                    <input id="cc-payment" asp-for="product.Insurance" type="text" class="form-control" aria-required="true" aria-invalid="false" value="">
                                                                    <span asp-validation-for="product.Insurance"></span>
                                                                </div>
                                                            </div>
                                                            <div class="row">

                                                                <div class="form-group col-md-12">
                                                                    <label asp-for="product.Quantity" class="control-label mb-1"></label>
                                                                    <input id="cc-payment" asp-for="product.Quantity" type="text" class="form-control" aria-required="true" aria-invalid="false" value="">
                                                                    <span asp-validation-for="product.Quantity"></span>
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="form-group col-md-6">
                                                                    <label asp-for="product.Discount" class="control-label mb-1"></label>
                                                                    <input id="cc-payment" asp-for="product.Discount" type="text" class="form-control" aria-required="true" aria-invalid="false" value="">
                                                                    <span asp-validation-for="product.Discount"></span>
                                                                </div>
                                                                <div class="form-group col-md-6">
                                                                    <label asp-for="product.Material" class="control-label mb-1"></label>
                                                                    <input id="cc-payment" asp-for="product.Material" type="text" class="form-control" aria-required="true" aria-invalid="false" value="">
                                                                    <span asp-validation-for="product.Material"></span>
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="form-group col-md-4">
                                                                    <label asp-for="product.Length" class="control-label mb-1"></label>
                                                                    <input id="cc-payment" asp-for="product.Length" type="text" class="form-control" aria-required="true" aria-invalid="false" value="">
                                                                    <span asp-validation-for="product.Length"></span>
                                                                </div>
                                                                <div class="form-group col-md-4">
                                                                    <label asp-for="product.Height" class="control-label mb-1"></label>
                                                                    <input id="cc-payment" asp-for="product.Height" type="text" class="form-control" aria-required="true" aria-invalid="false" value="">
                                                                    <span asp-validation-for="product.Height"></span>
                                                                </div>
                                                                <div class="form-group col-md-4">
                                                                    <label asp-for="product.Depth" class="control-label mb-1"></label>
                                                                    <input id="cc-payment" asp-for="product.Depth" type="text" class="form-control" aria-required="true" aria-invalid="false" value="">
                                                                    <span asp-validation-for="product.Depth"></span>
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <label asp-for="product.MadeIn" class="control-label mb-1"></label>
                                                                <input id="cc-payment" asp-for="product.MadeIn" type="text" class="form-control" aria-required="true" aria-invalid="false" value="">
                                                                <span asp-validation-for="product.MadeIn"></span>
                                                            </div>
