                                                                <textarea id="summernote1" asp-for="product.InstructionsForUse" class="form-control" aria-required="true" aria-invalid="false" value=""></textarea>
                                                                <span asp-validation-for="product.InstructionsForUse"></span>
                                                            </div>
                                                            <div>
                                                                <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                                                    <i class="fa fa-plus fa-lg"></i>&nbsp;
                                                                    <span id="payment-button-amount">Tạo danh mục</span>
                                                                    <span id="payment-button-sending" style="display:none;">Sending…</span>
                                                                </button>
                                                            </div>


                                                        </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                                                <div class="row mb-4">
                                                    <div class="col-6">
                                                        <h3>Các ảnh của sản phẩm</h3>
                                                    </div>
                                                    <div class="col-6 d-flex justify-content-end">
                                                        <input type="button" id="TaiAnh" class="btn btn-sm btn-success" onclick="Browsever()" value="Tải ảnh" />
                                                    </div>
                                                </div>
                                                <table class="table table-bordered table-striped mb-5">

                                                    <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Ảnh</th>
                                                            <th>Ảnh đại diện</th>
                                                            <th>Thao tác</th>
                                                        </tr>
                                                    </thead>

                                                    <tbody id="tbHTML">
                                                        <input type="hidden" id="CurrentId" value="0" />
                                                    </tbody>
                                                </table>

                                                <button type="submit" class="btn btn-sm btn-success">Create</button>
                                                <a class="btn btn-sm btn-secondary" asp-page="./Index">Back to list</a>
                                        </div>
                                       
                                    </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div> <!-- .card -->

        </div>

    </div>

</div>
@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/summernote_ckfinder.js"></script>
    <script>
        function Browsever(field) {
            var finder = $('<div />').dialogelfinder({
                url: '/Admin/el-finder-file-system/connector',
                baseUrl: "/lib/elfinder/",
                lang: 'vi',
                width: 840,
                height: 450,
                destroyOnClose: true,
                commandsOptions: {
                    getfile: {
                        oncomplete: 'close',
                        folders: false
                    }
                },
                getFileCallback: function (file) {
                    var fileUrl = file.url;
                    addImageProduct(fileUrl);
                }
            }).dialogelfinder('instance');
        }
        //xóa
        // lấy ra id của hàng cần xóa
        $('body').on('click', '.btnXoaAnh', function () {
            var conf = confirm('Bạn có muốn xóa bản ghi này không ?');
            if (conf === true) {
                var _id = $(this).data('id');
                $('#trow_' + _id).fadeTo('fast', 1, function () {
                    $(this).slideUp('fast', function () { $(this).remove(); })
                });
                //sau khi xóa cập nhật lại thứ tự
                var temp = $('#CurrentId').val();
                var currentId = parseInt(temp) - 1;
                $('#tCurrentId').val(currentId);
            }

        });
        function addImageProduct(url) {
            var temp = $('#CurrentId').val();
            var currentId = parseInt(temp) + 1;
            console.log(currentId)
            var str = "";
            if (currentId == 1) {
                //cộng chuỗi
                str = `<tr id="trow_${currentId}">
                                                 <td class="text-center">${currentId}</td>
                                                 <td class="text-center"><img src="${url}"  width="100px" height="100px"/><input type="hidden" name="Images" value="${url}"/></td>
                                                 <td class="text-center">
                                                          <label class="custom-control custom-radio custom-control-inline" >
                                                                    <input type="radio" name="radioDefault" value=${currentId} checked="checked" class="custom-control-input"/>
                                                                    <span class="custom-control-label"></span>
                                                           </label>
                                                 </td>
                                                 <td class="text-center"><a href="#" data-id="${currentId}" class="btn btn-sm btn-danger btnXoaAnh">Xóa</a></td>
                                             </tr>`;
            }
            else {
                str = `<tr id="trow_${currentId}">
                                                 <td class="text-center">${currentId}</td>
                                                 <td class="text-center"><img src="${url}"  width="100px" height="100px"/><input type="hidden" name="Images" value="${url}"/></td>

                                                     <td class="text-center">
                                                         <label class="custom-control custom-radio custom-control-inline" >
                                                             <input type="radio" name="radioDefault" value=${currentId} class="custom-control-input"/>
                                                             <span class="custom-control-label"></span>
                                                            </label>
                                                    </td>
                                                 <td class="text-center"><a href="#" data-id="${currentId}" class="btn btn-sm btn-danger btnXoaAnh">Xóa</a></td>
                                             </tr>`;
            }
            //gen ra bảng
            $('#tbHTML').append(str);
            $('#tCurrentId').val(currentId);
        }
    </script>
}

